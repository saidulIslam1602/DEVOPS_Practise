# Database Configuration

#DbType, username, password, host, port, database name
DATABASE_URL=postgresql://aquaculture:aquaculture123@postgres:5432/aquaculture_db

#20 connections are always available for database operations
DATABASE_POOL_SIZE=20

#10 additional connections can be opened if needed
DATABASE_MAX_OVERFLOW=10



# Redis Configuration

#protocol://host:port/db_number
REDIS_URL=redis://redis:6379/0

#50 concurrent connections available
REDIS_MAX_CONNECTIONS=50



# Kafka Configuration

#hostname:port
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

#message topic name, real time fish species predictions
KAFKA_TOPIC_PREDICTIONS=fish-predictions

#message topic name, uploaded fish images
KAFKA_TOPIC_IMAGES=fish-images

#Load Balancing, Falut Tolerance Consumer Group
KAFKA_CONSUMER_GROUP=aquaculture-workers


# API Configuration

#Makes API accessible from any IP address
API_HOST=0.0.0.0

#Port number for the API server
API_PORT=8000

#Number of worker processes for handling requests
API_WORKERS=4

#Enable auto-reload for development
API_RELOAD=false

# Security

#Cryptographic key for signing cookies, sessions, and CSRF tokens
SECRET_KEY=change-this-to-a-secure-random-string-in-production

#Signing key for JSON Web Tokens (JWT) authentication
JWT_SECRET=change-this-to-another-secure-random-string

#Encryption algorithm for JWT token signing
JWT_ALGORITHM=HS256

#JWT tokens expire after 24 hours for security
JWT_EXPIRATION_HOURS=24

# Rate Limiting

#Maximum API requests allowed per minute per user
RATE_LIMIT_PER_MINUTE=100

# ML Configuration

#File path to the trained PyTorch fish classification model
MODEL_PATH=/app/models/fish_classifier_v1.pth

#Number of images processed simultaneously for better GPU utilization
BATCH_SIZE=32

#Minimum confidence level (0.5 = 50%) required for valid predictions
CONFIDENCE_THRESHOLD=0.5

# Monitoring

#Logging detail level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Environment

#Current deployment environment (development, staging, production)
ENVIRONMENT=development

#Enable detailed error messages and debugging features
DEBUG=true
